{
  "version": 2,
  "headers": [
    {
      "source": "/videos/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Content-Type",
          "value": "video/mp4"
        },
        {
          "key": "Accept-Ranges",
          "value": "bytes"
        }
      ]
    }
  ],
  "builds": [
    {
      "src": "api/planyourjourney.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/charging_cost.py",
      "use": "@vercel/python"
    },
    {
      "src": "**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "**/*.css",
      "use": "@vercel/static"
    },
    {
      "src": "**/*.js",
      "use": "@vercel/static"
    },
    {
      "src": "images/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "icons/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "videos/**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/proxy-api/(.*)",
      "destination": "/api/planyourjourney.py"
    },
    {
      "source": "/estimate-charging-cost/(.*)",
      "destination": "/api/charging_cost.py"
    }
  ],
  "env": {
    "GRAPHOPPER_API_KEY": "@graphopper_api_key",
    "GEO_SERVER_URL": "@geo_server_url",
    "API_KEY": "@api_key",
    "FOURSQUARE_API_KEY": "@foursquare_api_key"
  }
}
